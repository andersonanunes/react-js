generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id
  title     String
  bannerUrl String
  ads       Ads[]
}

model Ads {
  id              String   @id
  gameId          String
  name            String
  yearsPlaying    Int
  discord         String
  weekDays        String
  hourStart       Int
  hourEnd         Int
  useVoiceChannel Boolean
  createdAt       DateTime @default(now())

  game Game @relation(fields: [gameId], references: [id])
}
